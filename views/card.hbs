<h1>Shopping Card</h1>

<div id="card">
{{#if courses.length}}

    <table>
        <thead>
            <tr>
                <th>Course name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">
                        Delete
                    </button>
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>

    <p><strong>Total cost:</strong> <span class="price">{{price}}</span></p>

    <form action="/orders" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <button class="btn" type="submit">Make order</button>
    </form>
{{else}}
    <p>Shopping card is empty</p>
{{/if}}
</div>
